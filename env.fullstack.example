# Variables de Entorno para Aplicación Full-Stack - DigitalOcean
# Copia este archivo como .env y modifica los valores según tu configuración

# ===== CONFIGURACIÓN GENERAL =====
DOMAIN_NAME=tu-dominio.com
NODE_ENV=production
APP_NAME=sgarav-app

# ===== CONFIGURACIÓN DE DIGITALOCEAN =====
DO_DROPLET_IP=YOUR_DROPLET_IP
SSL_EMAIL=tu-email@dominio.com

# ===== BASE DE DATOS POSTGRESQL =====
DB_NAME=sgarav_db
DB_USER=sgarav_user
DB_PASSWORD=tu_password_seguro_para_db
DB_HOST=postgres
DB_PORT=5432

# ===== BACKEND NESTJS =====
JWT_SECRET=tu_jwt_secret_muy_seguro_para_produccion
API_PORT=3000
BACKEND_URL=http://backend:3000

# ===== FRONTEND REACT =====
REACT_APP_API_URL=http://tu-dominio.com/api
# En desarrollo local usar: http://localhost:3000/api

# ===== REDIS (CACHÉ Y SESIONES) =====
REDIS_PASSWORD=tu_password_redis_seguro
REDIS_HOST=redis
REDIS_PORT=6379

# ===== CONFIGURACIÓN DE SEGURIDAD =====
CORS_ORIGIN=https://tu-dominio.com,http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# ===== CONFIGURACIÓN DE ARCHIVOS/UPLOADS =====
UPLOAD_LIMIT=10mb
UPLOAD_PATH=/app/uploads

# ===== CONFIGURACIÓN DE EMAIL (OPCIONAL) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu_app_password
EMAIL_FROM=noreply@tu-dominio.com

# ===== CONFIGURACIÓN DE MONITOREO =====
ENABLE_MONITORING=true
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# ===== CONFIGURACIÓN DE BACKUPS =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
DB_BACKUP_RETENTION_DAYS=7

# ===== CONFIGURACIÓN DE DESARROLLO =====
# Descomenta para desarrollo local
# REACT_APP_API_URL=http://localhost:3000
# DATABASE_HOST=localhost 